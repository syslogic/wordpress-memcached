web1:
  name: wp-web
  php_extensions:
    - memcache
    - mysql
    - curl
    - zip
  shared_writable_dirs:
    - wp-content/uploads/
    - wp-content/plugins/flexicache/_data/
  after_build:
    - "php pagoda/wp-install.php"
    - "mv pagoda/wordpress/* ./"
    - "rm -R pagoda/wordpress"
  after_deploy:
    - "cp pagoda/flexicache.htaccess wp-content/plugins/flexicache/_data/.htaccess"
    - "mkdir wp-content/plugins/flexicache/_data/_storage"
db1:
  name: wp-db
cache1:
  name: wp-cache
  type: memcached